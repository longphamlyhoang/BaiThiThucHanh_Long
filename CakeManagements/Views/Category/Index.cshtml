@model IEnumerable<CakeManagements.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
            <td class="text-center"><a title="show products" class="btn btn-outline-info btn-sm" asp-controller="Cake" asp-action="Index" asp-route-catId="@item.CategoryId">@item.Cakes.Count()</a></td>
            </td>
        </tr>
}
    </tbody>
</table>
